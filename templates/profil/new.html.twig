{% extends 'base.html.twig' %}

{% block title %}Nouveau Profil{% endblock %}

{% form_theme form _self %}
    
{% block body %}

    <div class="py-8">
        <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
            <h1 class="text-2xl font-bold">Créer un nouveau profil</h1>
        </div>
    </div>

    <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
        <div class="overflow-hidden shadow-md sm:rounded-md">
    
    <div class="mt-8">
        {{ form_start(form) }}

        <div class="mb-4">
            {{ form_label(form.email, null, { 'label_attr': {'class': 'block font-bold mb-1'} }) }}
            {{ form_widget(form.email, { 'attr': {'class': 'px-4 py-2 border rounded-lg w-full'} }) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.roles, null, { 'label_attr': {'class': 'block font-bold mb-1'} }) }}
            {{ form_widget(form.roles, { 'attr': {'class': 'px-4 py-2 border rounded-lg w-full'} }) }}
        </div>

        
        <div class="mb-4">
            {{ form_label(form.password, null, { 'label_attr': {'class': 'block font-bold mb-1'} }) }}
            {{ form_widget(form.password, { 'attr': {'class': 'px-4 py-2 border rounded-lg w-full'} }) }}
        </div>

        
        <div class="mb-4">
            {{ form_label(form.prenom, null, { 'label_attr': {'class': 'block font-bold mb-1'} }) }}
            {{ form_widget(form.prenom, { 'attr': {'class': 'px-4 py-2 border rounded-lg w-full'} }) }}
        </div>

        
        <div class="mb-4">
            {{ form_label(form.nom, null, { 'label_attr': {'class': 'block font-bold mb-1'} }) }}
            {{ form_widget(form.nom, { 'attr': {'class': 'px-4 py-2 border rounded-lg w-full'} }) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.ville, null, { 'label_attr': {'class': 'block font-bold mb-1'} }) }}
            {{ form_widget(form.ville, { 'attr': {'class': 'px-4 py-2 border rounded-lg w-full'} }) }}
        </div>
        

        {{ form_widget(form) }}

        <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-lg">Créer</button>

        {{ form_end(form) }}
    </div>
    <div class="max-w-7xl mx-auto sm:px-6 lg:px-8 mt-4">
        <a href="{{ path('app_profil_index') }}" class="mt-4 text-blue-500">Retour à la liste</a>
    </div>
{% endblock %}